<%= stylesheet_link_tag "facebook" %>

<div class="navbar navbar-fixed-top header">
  <div class="col-md-12">
    <!-- Facelook Header -->
    <div class="navbar-header">

      <!-- adding logo to the header -->
      <%= link_to image_tag("logo2.png", :border => 0, :alt => 'Facelook', :title => 'Logo', :size => '200x50'), facebook_home_path, :class => 'navbar-brand' %>

      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse1">
        <i class="glyphicon glyphicon-search"></i>
      </button>

    </div>
    <!-- Search and right buttons -->
    <div class="collapse navbar-collapse" id="navbar-collapse1">

      <!-- Search form-->
      <%= form_tag('find_friends', :class => 'navbar-form navbar-left', :method => 'get') do %>
          <div class="input-group" style="max-width:470px;margin-top: 10px">
            <%= text_field_tag :src_term, nil, :placeholder => "Search", :class => "form-control" %>
            <div class="input-group-btn">
              <%= button_tag :class => "btn btn-default btn-primary" do %>
                  <i class="glyphicon glyphicon-search"></i>
              <% end %>
            </div>
          </div>
      <% end %>

      <!-- Navigation buttons -->
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to ({:action => :profile}) do %>
              <i class="glyphicon glyphicon-user" style="color:#5cdd21;"></i> <%= user.name %>
          <% end %>
        </li>
        <li>
          <%= link_to ({:action => :home}) do %>
              <i class="glyphicon glyphicon-th-large" style="color:#0000aa;"></i> News Feed
          <% end %>
        </li>
        <li>
          <a href="#editSettingsModal" role="button" data-toggle="modal">
            <i class="glyphicon glyphicon-cog" style="color:#dd1111;"></i> Settings</a>
        </li>
        <li>
          <a href="#aboutModal" role="button" data-toggle="modal">
            <i class="glyphicon glyphicon-info-sign" style="color:#34a9dd;"></i> About</a>
        </li>
        <li>
          <%= link_to ({:action => :log_out}) do %>
              <i class="glyphicon glyphicon-log-out" style="color:#ddcc00;"></i> Log Out
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<!-- ABOUT DIALOG -->
<div id="aboutModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="width:12px;">×</button>
        <h2 class="text-center">About</h2>
      </div>
      <h4 class="text-center">Developers</h4>
      <div class="modal-body">
        <div class="col-md-12 text-right">
          <p class="notice"><%= link_to image_tag("emre.jpg", :border => 0, :size => '75x75', :alt => '', :title => ''), "https://plus.google.com/+EmreArd%C4%B1%C3%A7/posts/hyZiG5wHpbX", :class => '' %> Emre Ardıç</p></br></br></br>
        </div>
        <div class="col-md-12 text-left">
          <p class="notice"><%= link_to image_tag("azat.jpg", :border => 0, :size => '75x75', :alt => '', :title => ''), "http://www.azatugurlu.com", :class => '' %>Azat Uğurlu</p>
      </div>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">OK</button>
      </div>
    </div>
  </div>
</div>

<!-- Settings DIALOG -->
<div id="editSettingsModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="width:12px;">×</button>
        <h2 class="text-center">Change Settings</h2>
      </div>
      <div class="modal-body">
        <div class="col-md-12">
          <%= form_tag(url_for(action: 'save_settings', controller: 'facebook'), :method => :post, :remote => true) do %>
              <table class="table">
                <tr>
                  <td><%= label_tag "Search" %></td>
                </tr>
                <tr>
                  <td><%= content_tag :p, "Hide profile in search?" %></td>
                  <td><%= check_box_tag :src_hide, true, false, :class => 'checkbox', :style => 'margin:auto' %></td>
                </tr>
              </table>
             <%= button_tag "Save", :class => 'btn' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>





